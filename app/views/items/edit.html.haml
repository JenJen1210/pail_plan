.container
	%h1
		Edit an ~Adventure~
	= form_for @item, html: { multipart: true } do |f|
		.input-field
			= f.label :name
			%br/
			= f.text_field :name
		.input-field
			= f.label :description
			%br/
			= f.text_field :description
		.input-field
			= f.select :category, options_for_select(['Travel', 'Life Choices', 'Food & Drink', 'Career', 'Family', 'Other'])
			%label Category
		.input-field
			= f.hidden_field :user_id, {value: current_user.id }
		.input-field
			= f.file_field :image
		%br/
		.actions
			= f.submit "YOLO", class: "btn"
